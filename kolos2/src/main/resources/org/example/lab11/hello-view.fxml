<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="200.0" spacing="20.0"  xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab11.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

<!--<Canvas width="500" height="500"/>-->

   <TextArea fx:id="outputField" prefHeight="200.0" prefWidth="200.0" />
   <TextField id="textField" fx:id="textField" onAction="#send" />
   <PointLight color="CHARTREUSE" lightOn="true" />
   <Canvas fx:id="canvas" focusTraversable="true" height="500.0" visible="false" width="500.0">
      <effect>
         <Glow />
      </effect>
   </Canvas>

  <Label fx:id="welcomeText" />
   <DatePicker />
  <Button onAction="#onHelloButtonClick" prefHeight="60.0" prefWidth="61.0" text="Hello!" />
</VBox>
